@model Livro.Presentation.Web.Models.AutorViewModel
    <div class="row">
        <div class="col-lg-12 table">
            <h3><label class="control-label">Autor - Alterar</label></h3>
        </div>
    </div>
<form asp-action="Update">
    <input asp-for="CodAu" hidden>
    <div class="form-group">
        <label asp-for="Nome" class="control-label">@Html.DisplayNameFor(model => model.Nome)</label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="row">
        <div class="col-lg-1">
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Salvar" />
            </div>
        </div>
        <div class="col-lg-1">
            <div class="form-group">
                <a asp-action="Index" class="btn btn-secondary">Voltar</a>
            </div>
        </div>
    </div>
</form>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}