@model IEnumerable<Livro.Presentation.Web.Models.AutorViewModel>

<partial name="_AlertMessagePartial" />
<div class="row">
    <div class="col-lg-12 table">
        <h3><label class="control-label col-md-2">Autor</label></h3>
    </div>
</div>
<a asp-controller="Autor" asp-action="Create" class="btn btn-primary">Adicionar</a>
<br />&nbsp;
<br />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    <a asp-controller="Autor" asp-action="Update" asp-route-id="@item.CodAu" class="btn btn-success">Atualizar</a>
                    <a asp-controller="Autor" asp-action="Delete" asp-route-id="@item.CodAu" class="btn btn-danger">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>