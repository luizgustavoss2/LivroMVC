@model Livro.Presentation.Web.Models.AssuntoViewModel

    <form asp-action="Create">
        <div class="row">
            <div class="col-lg-12 table">
                <h3><label class="control-label">Assunto - Inserir</label></h3>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6">
                <div class="form-group">
                    <label asp-for="Descricao" class="control-label">@Html.DisplayNameFor(model => model.Descricao)</label>
                    <input asp-for="Descricao" class="form-control" />
                    <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-1">
                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="Salvar" />
                </div>
            </div>
            <div class="col-lg-1">
                <div class="form-group">
                    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
                </div>
            </div>
        </div>

    </form>


    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }